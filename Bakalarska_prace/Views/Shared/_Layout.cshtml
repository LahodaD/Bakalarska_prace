<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bakalarska_prace</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bakalarska_prace.styles.css" asp-append-version="true" />
    <link href="~/css/bar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        @*<div class="header_img"> <img src="https://i.imgur.com/hczKIze.jpg" alt=""> </div>*@
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="#" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name">BBBootstrap</span> </a>
                <div class="nav_list"> 
                    @{
                        @if (User.Identity.IsAuthenticated == true && (User.IsInRole(Roles.Admin.ToString())))
                        {
                            <a class="nav_link" asp-area="Admin" asp-controller="Users" asp-action="Index"> <i class='bx bx-user nav_icon'></i> <span class="nav_name">Users</span> </a>
                        }
                        @if (User.Identity.IsAuthenticated == true && (User.IsInRole(Roles.Customer.ToString())))
                        {
                            <a class="nav_link" asp-area="Employee" asp-controller="Cars" asp-action="Index"> <i class='bx bx-message-square-detail nav_icon'></i> <span class="nav_name">Cars</span> </a>
                            <a class="nav_link" asp-area="Employee" asp-controller="Customers" asp-action="Index"> <i class='bx bx-bookmark nav_icon'></i> <span class="nav_name">Customers</span> </a>
                            <a class="nav_link" asp-area="Employee" asp-controller="Sales" asp-action="Index"> <i class='bx bx-bar-chart-alt-2 nav_icon'></i> <span class="nav_name">Sales</span> </a>
                            <a class="nav_link" asp-area="Employee" asp-controller="Files" asp-action="Index"> <i class='bx bx-folder nav_icon'></i> <span class="nav_name">Files</span> </a>
                        }
                    }
                </div>
            </div> 
            <a class="nav_link" asp-area="Security" asp-controller="Account" asp-action="Logout"> <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">SignOut</span> </a>
        </nav>
    </div>
    <!--Container Main start-->
    <div class="height-100 bg-light">
        @RenderBody()
    </div>
    <!--Container Main end-->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/bar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
